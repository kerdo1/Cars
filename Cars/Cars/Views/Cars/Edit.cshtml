@model Cars.Models.EditCarViewModel

<h1>Edit Car in Table</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="Color" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Plate</label>
        <input type="text" class="form-control" asp-for="Plate" />
        <span asp-validation-for="Plate" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Mileage</label>
        <input type="number" class="form-control" asp-for="Mileage" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Made</label>
        <input type="datetime-local" class="form-control" asp-for="Made" />
        <span asp-validation-for="Made" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
