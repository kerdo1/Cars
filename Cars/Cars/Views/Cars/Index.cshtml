@model List<Cars.Models.CarsViewModel>

<h1>Cars List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Model</th>
            <th>Color</th>
            <th>Plate</th>
            <th>Mileage</th>
            <th>Made</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Model</td>
                <td>@car.Color</td>
                <td>@car.Plate</td>
                <td>@car.Mileage</td>
                <td>@car.Made.ToString("dd-MM-yyyy")</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                    <a class="btn btn-primary" asp-controller="Cars" asp-action="View" asp-route-id="@car.Id">View</a>
                    <form asp-action="Delete" asp-controller="Cars" method="post">
                        <input type="hidden" name="id" value="@car.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
